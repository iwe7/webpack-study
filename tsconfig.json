{
    "compilerOptions": {
        "outDir": "dist/tsc",
        "sourceRoot": "./",
        "sourceMap": true,
        "target": "esnext",
        "module": "commonjs",
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "scripts",
        "src",
        "packages",
        "widgets",
        "electron",
        "wxapp",
        "wechat"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tsc",
        "dev"
    ]
}
