{
    "compilerOptions": {
        "outDir": "dist/tsc",
        "sourceRoot": "./",
        "baseUrl": "./",
        "sourceMap": true,
        "target": "esnext",
        "module": "commonjs",
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "declaration": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {}
    },
    "include": [
        "scripts",
        "src",
        "packages",
        "widgets",
        "electron",
        "wxapp",
        "wechat",
        "render",
        "angular"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tsc",
        "dev"
    ],
    "angularCompilerOptions": {
        "genDir": "./dist/gendir",
        "skipMetadataEmit": true,
        "enableIvy": true
    }
}
